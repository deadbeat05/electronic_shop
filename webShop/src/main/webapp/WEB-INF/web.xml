<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <context-param>
    <param-name>captcha</param-name>
    <param-value>session</param-value>
  </context-param>
  <context-param>
    <param-name>captchaTime</param-name>
    <param-value>300</param-value>
  </context-param>

  <display-name>Archetype Created Web Application</display-name>
  <listener>
    <listener-class>com.epam.prykhodko.listener.ContextListener</listener-class>
  </listener>
  <filter>
    <filter-class>com.epam.prykhodko.filter.LogoutFilter</filter-class>
    <filter-name>logoutFilter</filter-name>
  </filter>
  <filter-mapping>
    <filter-name>logoutFilter</filter-name>
    <url-pattern>/logout</url-pattern>
  </filter-mapping>
  <resource-ref>
    <description>DB Connection</description>
    <res-auth>Container</res-auth>
    <res-ref-name>electronic_store</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
  </resource-ref>
</web-app>
